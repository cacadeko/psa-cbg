{
  "openapi": "3.0.0",
  "info": {
    "title": "API PSA-CBG Unificada",
    "description": "API unificada para gerenciamento de atletas, treinadores, usuários, PSE, sono e autenticação.",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:8000/api", "description": "API REST" },
    { "url": "http://localhost:8000", "description": "Raiz do servidor" }
  ],
  "paths": {
    "/treinadores": {
      "get": {
        "summary": "Listar treinadores",
        "description": "Retorna a lista de todos os treinadores cadastrados",
        "tags": ["Treinadores"],
        "responses": {
          "200": {
            "description": "Lista de treinadores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Treinador" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Criar treinador",
        "description": "Cria um novo treinador e automaticamente um usuário associado",
        "tags": ["Treinadores"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TreinadorCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Treinador criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer", "description": "ID do treinador criado" },
                    "message": { "type": "string", "description": "Mensagem de sucesso" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "error": { "type": "string" } }
                }
              }
            }
          }
        }
      }
    },
    "/treinadores/{id}": {
      "put": {
        "summary": "Atualizar treinador",
        "description": "Atualiza os dados de um treinador existente",
        "tags": ["Treinadores"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" }, "description": "ID do treinador" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TreinadorUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Treinador atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string" } } }
              }
            }
          },
          "400": {
            "description": "Erro na atualização",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "error": { "type": "string" } } }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Excluir treinador",
        "description": "Remove um treinador do sistema",
        "tags": ["Treinadores"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" }, "description": "ID do treinador" }
        ],
        "responses": {
          "200": {
            "description": "Treinador excluído com sucesso",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "message": { "type": "string" } } }
              }
            }
          },
          "400": {
            "description": "Erro na exclusão",
            "content": {
              "application/json": {
                "schema": { "type": "object", "properties": { "error": { "type": "string" } } }
              }
            }
          }
        }
      }
    },
